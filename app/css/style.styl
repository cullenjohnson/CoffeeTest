body
    font-family 'Source Sans Pro', Helvetica, sans-serif
    background #efefef
    
a
    color rgb(5, 141, 186)
    
    &:hover, &:focus
        color rgb(1, 60, 79)

.light_text
    color #777      

/* LAYOUT */    
#main
    position absolute
    left 0
    top 0
    right 0
    bottom 0

    display flex
    flex-direction column
    align-items stretch
    padding 10px

#header
    flex 2 1 auto
    align-self stretch
    
    position relative
    text-align center
    
    &>*
        text-align center
        position absolute
        bottom 0
        left 0
        right 0
    
#body
    flex 2 1 auto
    text-align center
    position relative
    
#footer
    flex 0 1 auto
    text-align center
    margin-top 10px


/* BUTTONS */
div.button
    display block
    
a.button, span.button
    display inline-block

.button
    background #7f7f7f
    text-decoration none
    color white
    padding 5px
    min-width 75px
    margin 2px
    transition background 0.2s, color 0.2s
    border-radius 3px
    cursor pointer
    user-select none
    
    &.disabled
        color #7f7f7f
        background-color #dfdfdf
        cursor: default
        &:hover
            color #7f7f7f
            background-color #dfdfdf
    
    &:hover, &:focus
        color: white
        background-color #3d3d3d
        
    &:active, &:focus
        background-color #163944
    
    &.primary_action
        background-color rgb(5, 188, 188)
        
        &:hover, &:focus
            background-color rgb(5, 141, 186)
        
        &:active
            background-color rgb(0, 91, 119)
        
.toast-notification
    position absolute
    top 0.3%
    left 50%
    z-index 1
    width 45%
    margin-left -22.5%
    text-align center
    background #058dba
    color white
    padding 0.2em
    border-radius 3px
    

#results_details
    text-align left

    li>span.results_answer
        color darkred
        
        &:after
            font-weight bold
            content ' (Incorrect)'
            
        &.correct
            color green
            
            &:after
                font-weight bold
                content ' (Correct)'
        
        
#rankings_table
    margin 0 auto
    border-collapse collapse
    
    tr
        margin 1px
        transition background-color 0.4s
        
        &.highlight
            background-color #e1e2a5
        
    tbody tr:hover 
        background-color #c9e4ed
        
        &.highlight
            background-color #e3e572

    td,th
        padding 2px 10px