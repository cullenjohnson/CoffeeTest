body
    font-family Helvetica, Arial
    background #efefef
    
a
    color rgb(5, 141, 186)
    
    &:hover
        color rgb(1, 60, 79)

.light_text
    color #777      

/* LAYOUT */    
#main
    position absolute
    left 0
    top 0
    right 0
    bottom 0

    display flex
    flex-direction column
    align-items stretch
    padding 10px

#header
    flex 2 1 auto
    align-self stretch
    
    position relative
    text-align center
    
    &>*
        text-align center
        position absolute
        bottom 0
        left 0
        right 0
    
#body
    flex 2 1 auto
    text-align center
    position relative
    
#footer
    flex 0 1 auto
    text-align center
    margin-top 10px


/* BUTTONS */
div.button
    display block
    
a.button, span.button
    display inline-block

.button
    background #7f7f7f
    text-decoration none
    color white
    padding 5px
    min-width 75px
    margin 2px
    transition background 0.2s
    border-radius 3px
    cursor pointer
    user-select none
    
    &:hover
        color: white
        background #3d3d3d
        
    &:active
        background #163944
        
    &.primary_action
        background rgb(5, 188, 188)
        
        &:hover
            background rgb(5, 141, 186)
            
        &:active
            background rgb(0, 91, 119)
